{
  "name": "ansi-preview",
  "displayName": "ansi-preview",
  "description": "ansi-preview",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:ans",
    "onFileSystem:ansi"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "ansiPreview",
          "name": "ansi preview"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.openExtensionPage",
        "title": "Open Extension's Page in the Marketplace"
      },
      {
        "command": "extension.openPreviewOnFocus",
        "title": "Open Preview"
      },
      {
        "command": "extension.openPreviewMenu",
        "title": "Open preview"
      },
      {
        "command": "extension.openPreviewOnEditorShortcut",
        "title": "Open preview"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+t",
        "command": "extension.openPreviewOnFocus",
        "when": "editorTextFocus",
        "mac": "cmd+shift+t"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceFilename =~ /.*\\.ans|ansi$/",
          "command": "extension.openPreviewOnEditorShortcut",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceFilename =~ /.*\\.ans|ansi$/",
          "command": "extension.openPreviewMenu",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "22.7.7",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  }
}